<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_gravity="center">


        <LinearLayout
            android:id="@+id/dotlin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/dotted_grey">


            <LinearLayout
                android:id="@+id/imagelin"
                android:layout_width="@dimen/_70sdp"
                android:background="#EBEBEB"
                android:layout_height="@dimen/_110sdp">

                <ImageView
                    android:id="@+id/img_shop_logo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_110sdp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginLeft="@dimen/_1sdp"
                android:orientation="vertical"
                android:background="#EBEBEB">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bakery, Fast Food"
                    android:layout_gravity="right"
                    android:paddingTop="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:gravity="right"
                    android:drawableRight="@drawable/hand"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="#E51C39"
                    android:id="@+id/txt_description" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"
                        android:orientation="horizontal">



                        <LinearLayout
                            android:id="@+id/lin2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_5sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uzo Sandwich"
                                android:textStyle="bold"
                                android:layout_gravity="left"
                                android:textSize="@dimen/_13sdp"
                                android:id="@+id/txt_shopname"/>




                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mahindra World City, Chengalpattu"
                                android:textSize="@dimen/_9sdp"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:layout_gravity="left"
                                android:id="@+id/txt_address"
                                android:singleLine="false"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10AM to 10PM"
                                    android:drawableLeft="@drawable/timer"
                                    android:textSize="@dimen/_8sdp"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:id="@+id/txt_time"
                                    android:singleLine="false"
                                    android:textColor="#E51C39"
                                    android:layout_gravity="left" />



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" (Mon-Sun)"
                                    android:textSize="@dimen/_8sdp"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:id="@+id/txt_des"
                                    android:singleLine="false"
                                    android:textColor="#E51C39"
                                    android:layout_gravity="left" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10AM to 10PM"
                                    android:drawableLeft="@drawable/timer"
                                    android:textSize="@dimen/_8sdp"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:id="@+id/txt_time_sun"
                                    android:singleLine="false"
                                    android:textColor="#E51C39"
                                    android:layout_gravity="left" />



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" (Sunday)"
                                    android:textSize="@dimen/_8sdp"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:id="@+id/txt_des_sun"
                                    android:singleLine="false"
                                    android:textColor="#E51C39"
                                    android:layout_gravity="left" />

                            </LinearLayout>



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View Menu"
                                android:drawableLeft="@drawable/view"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:drawablePadding="@dimen/_5sdp"
                                android:textSize="@dimen/_11sdp"
                                android:id="@+id/txt_menu"
                                android:singleLine="false"
                                android:layout_gravity="left" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Get Coupons"
                                android:textSize="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:id="@+id/txt_coupon"
                                android:gravity="right"
                                android:singleLine="false"
                                android:textColor="#E51C39"
                                android:layout_gravity="left" />

                            <View
                                android:layout_width="@dimen/_63sdp"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginLeft="@dimen/_97sdp"
                                android:background="#E51C39"/>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/back_arrow"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:background="@drawable/call_icon_black"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>