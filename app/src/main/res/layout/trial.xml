<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="LOGIN"
            android:layout_gravity="center"

            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MCITY"
            android:layout_gravity="center"
            android:textColor="@color/yellow"
            android:layout_marginTop="@dimen/_2sdp"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_3sdp"
            android:background="@color/orange"
            android:gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_20sdp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE. WORK. SHOP"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/_40sdp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_10sdp">


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/phone_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:textSize="@dimen/_12sdp"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/_13sdp"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hide_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp">

            <EditText
                android:id="@+id/pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pwd_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="@string/password"
                android:textSize="@dimen/_12sdp"
                android:maxLength="5"
                android:paddingBottom="@dimen/_13sdp"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:enabled="false"
                android:singleLine="true" />
        </LinearLayout>


        <Button
            android:id="@+id/otp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_30sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_17sdp"
            android:background="@drawable/otp_button"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:text="Generate Code" />


        <LinearLayout
            android:id="@+id/registerlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="right"
            android:orientation="vertical">



            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="right"
                android:textSize="@dimen/_11sdp"
                android:text="Dont Have an Account? Register!" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                style="?android:attr/progressBarStyle"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/submittv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/submit_icon"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textSize="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:id="@+id/textView3" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
