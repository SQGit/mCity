<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/box_bg">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">


            <TextView
                android:id="@+id/fromaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/location_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Mcity"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_5sdp"
                android:singleLine="true"
                android:text="  to  "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/toaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_5sdp"
                android:singleLine="true"
                android:text="Guindy"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:padding="@dimen/_10sdp"
            android:background="#d8d8d8">
        </View>
-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:singleLine="true"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:drawableLeft="@drawable/date_icon"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableLeft="@drawable/time_icon"
                    android:id="@+id/timer" />
            </LinearLayout>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/no_of_persons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_11sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:drawablePadding="@dimen/_2sdp"
                    android:gravity="start|center"
                    android:drawableLeft="@drawable/seat_icon"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:singleLine="true"
                    android:drawablePadding="@dimen/_9sdp"
                    android:drawableLeft="@drawable/rs_icon"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:id="@+id/amount"/>


            </LinearLayout>
        </LinearLayout>







        <LinearLayout
            android:id="@+id/lnr_round_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/round_head"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:text="Round Trip"
                android:textSize="@dimen/_11sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="start|center"
                android:drawableLeft="@drawable/round_trip"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_11sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:drawablePadding="@dimen/_2sdp"
                    android:gravity="start|center"
                    android:drawableLeft="@drawable/roundtrip_godate"/>



                <TextView
                    android:id="@+id/date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_11sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:drawablePadding="@dimen/_2sdp"
                    android:gravity="start|center"
                    android:drawableLeft="@drawable/roundtrip_returndate"/>
            </LinearLayout>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/red_stroke_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_5sdp"
                    android:padding="@dimen/_6sdp"
                    android:gravity="center"
                    android:text="Send Mail"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:id="@+id/mail" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center"
                android:background="@drawable/red_stroke_bg">

                <TextView
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/call_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:padding="@dimen/_6sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:text="Make Call"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="@dimen/_125sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@drawable/red_stroke_bg"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_5sdp"
                android:padding="@dimen/_6sdp"
                android:drawableLeft="@drawable/view_contact_icon"
                android:gravity="center"
                android:singleLine="true"
                android:text="See Id Proof"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:id="@+id/license_image" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:padding="@dimen/_7sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/midway_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#F44336"
                android:textSize="@dimen/_12sdp"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>