<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <LinearLayout
        android:id="@+id/dotlin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/dotted_red"
        android:layout_margin="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/imagelin"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shop_logo"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_1sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:background="#EBEBEB">


            <LinearLayout
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LavaCakes"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="#E51C39"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/txt_shopname"
                    android:layout_gravity="left" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:singleLine="false"
                    android:text="Buy 1 cake for Rs.1000/-and get 2 free."
                    android:textSize="@dimen/_9sdp"
                    android:id="@+id/txt_description"/>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="#BDBDBD"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tc"
                    android:textColor="#E51C39"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:gravity="right"
                    android:textSize="@dimen/_7sdp"
                    android:id="@+id/tc"
                    android:singleLine="true"
                    android:layout_gravity="right" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/coupon_arrow"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>