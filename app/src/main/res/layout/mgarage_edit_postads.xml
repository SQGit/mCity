<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:background="@color/colorAccent"
            android:gravity="start|center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="POST ADS"
                android:textColor="@color/white"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/settings_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/settings_icon"
                android:layout_gravity="right|center"/>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="#643e32">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="SUBMIT A CLASSIFIED AD"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/aroow_right" />

                <EditText
                    android:id="@+id/txt_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Ad Title"
                    android:editable="false"
                    android:enabled="false"
                    android:paddingLeft="@dimen/_7sdp"
                    android:textColor="#333333"
                    android:textColorHint="#333333"
                    android:singleLine="true"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#cccccc" />


            <LinearLayout
                android:id="@+id/linear_hide_bike1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_15sdp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/price" />

                            <EditText
                                android:id="@+id/editText_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="Price"
                                android:maxLines="1"
                                android:imeOptions="actionGo"
                                android:clickable="true"
                                android:inputType="number"
                                android:singleLine="true"
                                android:nextFocusRight="@+id/editText_yrmodel"
                                android:paddingLeft="@dimen/_7sdp"
                                android:textColor="#333333"
                                android:textColorHint="#333333"
                                android:textSize="@dimen/_12sdp" >
                            </EditText>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:background="#cccccc" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/bike" />


                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:id="@+id/editText_yrmodel"
                                android:hint="Model"
                                android:maxLines="1"
                                android:inputType="textCapSentences"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:paddingLeft="@dimen/_7sdp"
                                android:textColor="#333333"
                                android:textColorHint="#333333"
                                android:textSize="@dimen/_12sdp"/>
                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#cccccc" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_33sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/color" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="Colour"
                                android:inputType="textCapSentences"
                                android:id="@+id/editText_colour"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:nextFocusRight="@+id/editText_petrol"
                                android:maxLines="1"
                                android:paddingLeft="@dimen/_7sdp"
                                android:layout_gravity="center"
                                android:textColor="#333333"
                                android:textColorHint="#333333"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:background="#cccccc" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/spinner_value"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_33sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/fuel_icon" />

                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="wrap_content"
                                android:textColor="#333333"
                                android:background="@null"
                                android:imeOptions="actionNext"
                                android:textColorHint="#333333" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/down_full"/>

                            <!-- <EditText
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:background="@null"
                                 android:hint="Petrol"
                                 android:maxLines="1"
                                 android:id="@+id/editText_petrol"
                                 android:nextFocusDown="@+id/editText_kms"
                                 android:singleLine="true"
                                 android:imeOptions="actionNext"
                                 android:paddingLeft="@dimen/_7sdp"
                                 android:textColor="#333333"
                                 android:textColorHint="#333333"
                                 android:textSize="@dimen/_13sdp" />-->
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#cccccc" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/kms" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Km Driven so Far"
                        android:maxLines="1"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:id="@+id/editText_kms"
                        android:paddingLeft="@dimen/_7sdp"
                        android:textColor="#333333"
                        android:textColorHint="#333333"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <!--  <View
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_1sdp"
                      android:background="#cccccc" />-->
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linear_hide_bike2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_15sdp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/price" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="Price"
                                android:id="@+id/editText_price1"
                                android:maxLines="1"
                                android:inputType="number"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:nextFocusRight="@+id/editText_yrmodel"
                                android:paddingLeft="@dimen/_7sdp"
                                android:textColor="#333333"
                                android:textColorHint="#333333"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#cccccc"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/pro_icon" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@null"
                    android:hint="Ad Description"
                    android:imeOptions="actionDone"
                    android:singleLine="false"
                    android:inputType="textCapSentences"
                    android:gravity="bottom"
                    android:scrollHorizontally="false"
                    android:paddingLeft="@dimen/_9sdp"
                    android:textColor="#333333"
                    android:textColorHint="#333333"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/editText_description" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#cccccc" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_65sdp"
                android:paddingLeft="@dimen/_10sdp">

                <CheckBox
                    android:id="@+id/phone_enable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:text="Display Phone No"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="#d8d8d8"/>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_gravity="bottom">



                <ImageView
                    android:id="@+id/update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/submit_icon" />
            </LinearLayout>

        </LinearLayout>




    </ScrollView>

</LinearLayout>
