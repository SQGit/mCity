<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/dotlin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/dotted_grey">



            <LinearLayout
                android:id="@+id/imagelin"
                android:layout_width="@dimen/_70sdp"
                android:background="#EBEBEB"
                android:layout_height="@dimen/_105sdp">

                <ImageView
                    android:id="@+id/img_shop_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_margin="@dimen/_2sdp"
                android:orientation="vertical"
                android:background="#EBEBEB">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bakery, Fast Food"
                    android:layout_gravity="right"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:gravity="right"
                    android:drawableRight="@drawable/hand"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="#E51C39"
                    android:id="@+id/txt_description" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"

                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/lin2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_gravity="left"
                            android:layout_marginTop="@dimen/_5sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Food Zone"
                                android:textStyle="bold"
                                android:layout_gravity="left"
                                android:textSize="@dimen/_13sdp"
                                android:id="@+id/txt_shopname"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mahindra World City, Chengalpattu"
                                android:textSize="@dimen/_9sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_gravity="left"
                                android:id="@+id/txt_address"
                                android:singleLine="false"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="10AM to dsdadsd"
                                    android:drawableLeft="@drawable/timer"
                                    android:textSize="@dimen/_8sdp"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:id="@+id/txt_time"
                                    android:singleLine="true"
                                    android:textColor="#E51C39"
                                    android:layout_gravity="left" />



                                </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10AM to 10PM"
                                    android:drawableLeft="@drawable/timer"
                                    android:textSize="@dimen/_8sdp"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:id="@+id/txt_time_sun"
                                    android:singleLine="false"
                                    android:textColor="#E51C39"
                                    android:layout_gravity="left" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" (Sunday)"
                                    android:textSize="@dimen/_8sdp"
                                    android:drawablePadding="@dimen/_5sdp"
                                    android:id="@+id/txt_des_sun"
                                    android:singleLine="false"
                                    android:textColor="#E51C39"
                                    android:layout_gravity="left" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/back_arrow"
                        android:layout_width="0dp"
                        android:gravity="right"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:background="@drawable/call_icon_black"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>