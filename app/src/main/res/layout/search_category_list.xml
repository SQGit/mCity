<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_16sdp"
            android:text="Search ADS"/>



        <ImageView
            android:id="@+id/cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:src="@drawable/cross"/>


            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/lnr_bike"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:background="@drawable/sell_search_circle">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/bikes"
                    android:id="@+id/imageView3" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnr_car"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:background="@drawable/sell_search_circle">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:src="@drawable/big_car"
                    android:id="@+id/imageView4" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnr_elec"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:background="@drawable/sell_search_circle"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:src="@drawable/big_electronics_new"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/lnr_mobile"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:background="@drawable/sell_search_circle">



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/big_mobile"
                    android:id="@+id/imageView2" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnr_furniture"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:background="@drawable/sell_search_circle">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:src="@drawable/big_furn"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnr_book"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:background="@drawable/sell_search_circle"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:src="@drawable/big_books"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:visibility="invisible"
                android:background="@drawable/sell_search_circle">



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:src="@drawable/big_mobile"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnr_pets"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:background="@drawable/sell_search_circle">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:src="@drawable/big_pets"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:visibility="invisible"
                android:background="@drawable/sell_search_circle"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:visibility="invisible"
                    android:src="@drawable/big_books"/>
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>


</LinearLayout>


